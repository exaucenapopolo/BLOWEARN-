/******** NEW: Thursday availability functions ********/
function isTodayThursday() {
  try {
    const formatter = new Intl.DateTimeFormat('en-US', { 
      timeZone: 'Africa/Douala',
      weekday: 'long' 
    });
    const dayName = formatter.format(new Date());
    return dayName === 'Thursday';
  } catch (error) {
    console.warn('Timezone Africa/Douala non support√©, fallback local');
    const d = new Date();
    return d.getDay() === 4; // 4 = Thursday
  }
}

function getNextThursdayCountdown() {
  const now = new Date();
  const currentDay = now.getDay();
  let daysUntilThursday = (4 - currentDay + 7) % 7;
  if (daysUntilThursday === 0) daysUntilThursday = 7;
  const nextThursday = new Date(now);
  nextThursday.setDate(now.getDate() + daysUntilThursday);
  nextThursday.setHours(0, 0, 0, 0);
  const diff = nextThursday - now;
  const days = Math.floor(diff / (1000 * 60 * 60 * 24));
  const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
  const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
  const seconds = Math.floor((diff % (1000 * 60)) / 1000);
  return { days, hours, minutes, seconds };
}

function updateThursdayUI() {
  const isThursday = isTodayThursday();
  if (ENFORCE_THURSDAY && !isThursday) {
    if (thursdayAlert) thursdayAlert.style.display = 'block';
    if (countdownInterval) clearInterval(countdownInterval);
    countdownInterval = setInterval(() => {
      const countdown = getNextThursdayCountdown();
      if (thursdayCountdown) thursdayCountdown.textContent = `Prochain jeudi dans: ${countdown.days}j ${countdown.hours}h ${countdown.minutes}m ${countdown.seconds}s`;
      if (countdown.days === 0 && countdown.hours === 0 && countdown.minutes === 0 && countdown.seconds === 0) {
        window.location.reload();
      }
    }, 1000);
  } else {
    if (thursdayAlert) thursdayAlert.style.display = 'none';
    if (countdownInterval) clearInterval(countdownInterval);
  }
  return isThursday;
}

/******** Utility functions ********/
function shuffleArray(array) {
    for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
    }
    return array;
}

function getTodayString() {
  return new Date().toDateString();
}

/******** NEW: Countdown timer functions ********/
function startCountdown() {
  timeLeft = 7;
  updateTimerUI();
  
  if (countdownInterval) clearInterval(countdownInterval);
  
  countdownInterval = setInterval(() => {
    timeLeft--;
    updateTimerUI();
    
    if (timeLeft <= 0) {
      clearInterval(countdownInterval);
      if (!questionAnswered) {
        handleTimeUp();
      }
    }
  }, 1000);
}

function updateTimerUI() {
  timerText.textContent = `${timeLeft}s`;
  const progress = ((7 - timeLeft) / 7) * 360;
  timerProgress.style.transform = `rotate(${progress}deg)`;
}

function handleTimeUp() {
  questionAnswered = true;
  const question = currentQuestions[currentQuestionIndex];
  
  // Show correct answer
  document.querySelectorAll('.option').forEach(opt => {
    const originalIndex = parseInt(opt.dataset.originalIndex);
    if (originalIndex === question.correctAnswer) {
      opt.classList.add('correct');
    }
  });
  
  showNotification('error', 'Temps √©coul√©!', `La bonne r√©ponse √©tait: ${question.options[question.correctAnswer]}`);
  
  // Disable all options
  document.querySelectorAll('.option').forEach(opt => {
    opt.style.pointerEvents = 'none';
  });
  
  // Automatically move to next question after 2 seconds
  setTimeout(() => {
    nextQuestion();
  }, 2000);
}

function stopCountdown() {
  if (countdownInterval) {
    clearInterval(countdownInterval);
    countdownInterval = null;
  }
}

/******** Quiz functions ********/
function initQuiz() {
  const today = getTodayString();
  const isThursday = updateThursdayUI();
  
  // Check if it's Thursday
  if (ENFORCE_THURSDAY && !isThursday) {
    showNotification('info', 'Non disponible', 'Le Trivia Challenge n\'est disponible que le jeudi.');
    questionContainer.style.display = 'none';
    resultsContainer.style.display = 'none';
    return;
  }

  // Reset daily stats if date changed
  if (userData.lastTriviaDate !== today) {
    userData.triviaCompletedToday = 0;
    userData.triviaEarningsToday = 0;
    userData.triviaClaimedToday = false;
    saveUserData({ 
      lastTriviaDate: today, 
      triviaCompletedToday: 0, 
      triviaEarningsToday: 0,
      triviaClaimedToday: false
    });
  }
  
  quizzesCompletedToday = userData.triviaCompletedToday || 0;
  earningsToday = userData.triviaEarningsToday || 0;
  isClaimed = userData.triviaClaimedToday || false;
  
  updateDailyStats();

  // Check if user has completed today's quota
  if (quizzesCompletedToday >= MAX_QUIZ_PER_DAY) {
    showQuizUnavailableUI(isClaimed);
    return;
  }

  // Select 5 random questions
  currentQuestions = shuffleArray([...allQuestions]).slice(0, 5);
  
  startQuiz();
}

function showQuizUnavailableUI(claimed) {
  questionContainer.style.display = 'none';
  resultsContainer.style.display = 'block';
  
  resultsScore.textContent = `${MAX_QUIZ_PER_DAY}/${MAX_QUIZ_PER_DAY}`;
  
  if (claimed) {
    resultsMessage.textContent = `Vous avez compl√©t√© vos ${MAX_QUIZ_PER_DAY} questions d'aujourd'hui et r√©clam√© ${earningsToday} FCFA. Revenez demain!`;
    claimRewardButton.style.display = 'none';
  } else {
    resultsMessage.textContent = `Vous avez compl√©t√© vos ${MAX_QUIZ_PER_DAY} questions d'aujourd'hui.`;
    claimRewardButton.style.display = 'none';
  }
  totalEarningsDisplay.textContent = `+${earningsToday} FCFA`;
  nextQuizButton.style.display = 'inline-flex';
}

function startQuiz() {
  currentQuestionIndex = 0;
  score = 0;
  selectedOption = null;
  totalEarningsForClaim = 0;
  questionAnswered = false;

  resultsContainer.style.display = 'none';
  questionContainer.style.display = 'block';
  nextButton.style.display = 'none';
  
  loadQuestion();
}

function loadQuestion() {
  questionAnswered = false;
  const question = currentQuestions[currentQuestionIndex];
  const shuffledOptions = shuffleArray(question.options.map((opt, index) => ({ text: opt, originalIndex: index })));
  
  questionText.textContent = `Q${currentQuestionIndex + 1}: ${question.question}`;
  
  // Update progress
  progressText.textContent = `Question ${currentQuestionIndex + 1}/${currentQuestions.length}`;
  progressFill.style.width = `${((currentQuestionIndex + 1) / currentQuestions.length) * 100}%`;
  
  // Generate options
  optionsContainer.innerHTML = '';
  shuffledOptions.forEach((option, index) => {
    const optionElement = document.createElement('div');
    optionElement.className = 'option';
    optionElement.innerHTML = `<label class="option-label">${option.text}</label>`;
    optionElement.dataset.originalIndex = option.originalIndex;
    optionElement.addEventListener('click', () => selectOption(optionElement, option.originalIndex));
    optionsContainer.appendChild(optionElement);
  });
  
  // Start countdown timer
  startCountdown();
  
  // Reset button states
  nextButton.style.display = 'none';
}

function selectOption(optionElement, originalIndex) {
  if (questionAnswered) return;
  
  questionAnswered = true;
  stopCountdown();
  
  // Deselect all options
  document.querySelectorAll('.option').forEach(opt => {
    opt.classList.remove('selected');
  });
  
  // Select clicked option
  optionElement.classList.add('selected');
  selectedOption = originalIndex;

  const question = currentQuestions[currentQuestionIndex];
  const allOptions = document.querySelectorAll('.option');
  
  // Disable all options
  allOptions.forEach(opt => {
    opt.style.pointerEvents = 'none';
  });
  
  let isCorrect = (selectedOption === question.correctAnswer);

  // Show correct/incorrect answers
  allOptions.forEach(opt => {
    const optOriginalIndex = parseInt(opt.dataset.originalIndex);
    if (optOriginalIndex === question.correctAnswer) {
        opt.classList.add('correct');
    }
    if (optOriginalIndex === selectedOption && !isCorrect) {
        opt.classList.add('incorrect');
    }
  });
  
  // Update score and earnings
  if (isCorrect) {
    score++;
    totalEarningsForClaim += REWARD_PER_QUESTION;
    showNotification('success', 'Bonne r√©ponse!', `Vous avez gagn√© ${REWARD_PER_QUESTION} FCFA pour cette question.`);
  } else {
    showNotification('error', 'Mauvaise r√©ponse', `La bonne r√©ponse √©tait: ${question.options[question.correctAnswer]}`);
  }
  
  // Automatically move to next question after 2 seconds
  setTimeout(() => {
    nextQuestion();
  }, 2000);
}

function nextQuestion() {
  currentQuestionIndex++;
  
  if (currentQuestionIndex < currentQuestions.length) {
    loadQuestion();
  } else {
    showResults();
  }
}

function showResults() {
  stopCountdown();
  
  // Apply 500 FCFA limit
  if (totalEarningsForClaim > MAX_CLAIM_PER_DAY) {
    totalEarningsForClaim = MAX_CLAIM_PER_DAY;
  }

  resultsScore.textContent = `${score}/${currentQuestions.length}`;
  
  if (score === currentQuestions.length) {
    resultsMessage.textContent = 'F√©licitations! Vous avez r√©pondu correctement √† toutes les questions!';
  } else if (score > 0) {
    resultsMessage.textContent = `Bon travail! Vous avez r√©pondu correctement √† ${score} questions.`;
  } else {
    resultsMessage.textContent = 'Pas de chance cette fois! R√©essayez demain.';
  }
  
  totalEarningsDisplay.textContent = `+${totalEarningsForClaim} FCFA`;
  
  // Update user data locally + store trivia counters (ces mises √† jour ne touchent pas `solde`)
  userData.triviaCompletedToday = (userData.triviaCompletedToday || 0) + 1;
  userData.triviaEarningsToday = totalEarningsForClaim;
  
  saveUserData({ 
    triviaCompletedToday: userData.triviaCompletedToday, 
    triviaEarningsToday: userData.triviaEarningsToday
  });
  
  // Update daily stats
  quizzesCompletedToday = userData.triviaCompletedToday;
  earningsToday = userData.triviaEarningsToday;
  updateDailyStats();

  // Show results
  questionContainer.style.display = 'none';
  resultsContainer.style.display = 'block';
  
  const today = getTodayString();
  const isTodayClaimed = userData.lastTriviaClaimDate === today;

  if (totalEarningsForClaim > 0 && !isTodayClaimed) {
    claimRewardButton.disabled = false;
    claimRewardButton.textContent = `R√©clamer ${totalEarningsForClaim} FCFA`;
  } else if (isTodayClaimed) {
    claimRewardButton.disabled = true;
    claimRewardButton.textContent = 'R√©compense d√©j√† r√©clam√©e!';
  } else {
    claimRewardButton.disabled = true;
    claimRewardButton.textContent = 'Pas de gain √† r√©clamer';
  }
  
  nextQuizButton.style.display = 'inline-flex';
}

function updateDailyStats() {
  quizzesCompleted.textContent = `${quizzesCompletedToday}/${MAX_QUIZ_PER_DAY}`;
  earnedToday.textContent = `${earningsToday} FCFA`;
}

/******** Reward claim handling ********/
claimRewardButton.addEventListener('click', async () => {
  if (!currentUser) { 
    showNotification('error','Non connect√©','Veuillez vous connecter.'); 
    return; 
  }
  if (totalEarningsForClaim <= 0) {
    showNotification('info', 'Pas de gain', 'Il n\'y a pas de gain √† r√©clamer.');
    return;
  }
  
  const today = getTodayString();
  if (userData.lastTriviaClaimDate === today) {
      showNotification('info', 'D√©j√† r√©clam√©', 'Vous avez d√©j√† r√©clam√© les gains du quiz d\'aujourd\'hui.');
      return;
  }
  
  const REWARD_AMOUNT = totalEarningsForClaim;
  const MAX_INCREMENT_PER_REQUEST = 500;

  try {
    const uid = currentUser.uid;
    const userRef = db.collection('users').doc(uid);

    /****************************************************************
     * IMPORTANT: transaction **DOES NOT** modify 'solde' (intentionnel)
     * Only updates: profit, triviaGains, triviaEarningsToday, lastTriviaClaimDate
     * If you want `solde` to be incremented, call a Cloud Function / backend
     * that uses Admin SDK (server-side) to update `solde` securely.
     ****************************************************************/
    await db.runTransaction(async (tx) => {
      const snap = await tx.get(userRef);
      if (!snap.exists) throw new Error('Utilisateur introuvable.');

      const doc = snap.data() || {};
      let profitDoc = Number(doc.profit || 0);
      let triviaGainsDoc = Number(doc.triviaGains || 0);

      // Double-check claim date
      if (doc.lastTriviaClaimDate === today) {
        throw new Error('R√©clamation du jour d√©j√† effectu√©e.');
      }

      // Security check (client-side)
      if (REWARD_AMOUNT <= 0 || REWARD_AMOUNT > MAX_INCREMENT_PER_REQUEST) {
        throw new Error('Montant de r√©compense invalide.');
      }

      // Calculate new amounts (note: solde NOT changed here)
      const newProfit = profitDoc + REWARD_AMOUNT;
      const newTriviaGains = triviaGainsDoc + REWARD_AMOUNT;

      // Update transaction ‚Äî **no solde field**
      tx.update(userRef, {
        profit: newProfit,
        triviaGains: newTriviaGains,
        triviaEarningsToday: REWARD_AMOUNT,
        lastTriviaClaimDate: today
      });
    });

    // Success ‚Äî update local UI/data
    userData.lastTriviaClaimDate = today;
    claimRewardButton.disabled = true;
    claimRewardButton.textContent = 'R√©compense r√©clam√©e!';
    // Message clair : solde non modifi√© c√¥t√© client
    showNotification('success', 'R√©compense Ajout√©e!', `${REWARD_AMOUNT} FCFA ont √©t√© enregistr√©s dans profit/triviaGains. (Le solde n'est pas modifi√© c√¥t√© client.)`);

    earningsToday = REWARD_AMOUNT;
    updateDailyStats();

    /************************************************************************
     * Optionnel : si tu veux cr√©diter le champ `solde`, appelle ici une
     * Cloud Function s√©curis√©e (Admin SDK) qui ajoutera REWARD_AMOUNT √† solde.
     * Exemple d'appel (si tu as d√©ploy√© la function 'claimTriviaReward'):
     *
     * const claimFn = firebase.functions().httpsCallable('claimTriviaReward');
     * await claimFn({ amount: REWARD_AMOUNT });
     *
     * (Je n'appelle rien ici automatiquement ‚Äî c'est volontaire : tu as demand√©
     * que le client **ne modifie jamais** solde.)
     ************************************************************************/

  } catch (err) {
    console.error('Erreur lors de la r√©clamation:', err);
    const msg = err.message || 'Impossible d\'enregistrer la r√©compense. R√©essayez.';
    showNotification('error', 'Erreur de R√©clamation', msg);
  }
});

nextQuizButton.addEventListener('click', () => {
  showNotification('info', '√Ä demain!', 'Vous avez compl√©t√© votre quiz du jour. Rendez-vous demain!');
});

/******** User data management ********/
async function saveUserData(dataToSave) {
  if (!currentUser) return;
  try {
    const userRef = db.collection('users').doc(currentUser.uid);
    // merge:true pour ne pas √©craser d'autres champs
    await userRef.set(dataToSave, { merge: true });
  } catch (error) {
    console.error("Erreur lors de la sauvegarde des donn√©es :", error);
    showNotification('error', 'Erreur de sauvegarde', 'Impossible de sauvegarder vos donn√©es.');
  }
}

async function loadUserData() {
  if (!currentUser) throw new Error("Aucun utilisateur connect√©.");
  const userRef = db.collection('users').doc(currentUser.uid);
  const doc = await userRef.get();
  const today = getTodayString();

  if (doc.exists) {
      userData = doc.data() || {};
  } else {
    // IMPORTANT: NE PAS initialiser/√©crire `solde` c√¥t√© client.
    // On initialise seulement les champs permis c√¥t√© client.
    userData = {
      triviaCompletedToday: 0,
      triviaEarningsToday: 0,
      lastTriviaDate: null,
      lastTriviaClaimDate: null,
      profit: 0,
      triviaGains: 0
    };
    // Sauvegarde initiale ‚Äî n'inclut PAS solde
    await saveUserData(userData);
  }
  
  // Reset daily stats if date changed
  if (userData.lastTriviaDate !== today) {
      userData.triviaCompletedToday = 0;
      userData.triviaEarningsToday = 0;
      userData.lastTriviaDate = today;
  }

  return userData;
}

function updateUserInfoUI(user, dbData = {}) {
    const displayName = dbData.displayName || user.displayName || (user.email ? user.email.split('@')[0] : 'Utilisateur');
    if (sidebarUsername) sidebarUsername.textContent = displayName;
    if (userAvatar) userAvatar.textContent = displayName.charAt(0).toUpperCase();
}

function applyTheme() {
    const isDarkMode = userData.theme === 'dark';
    document.body.classList.toggle('dark-mode', isDarkMode);
    if (themeToggle) {
      themeToggle.innerHTML = isDarkMode 
          ? `<i class="fas fa-sun"></i><span>${translations[currentLang]['header.day_mode']}</span>` 
          : `<i class="fas fa-moon"></i><span>${translations[currentLang]['header.night_mode']}</span>`;
    }
}

/******** Main initialization ********/
auth.onAuthStateChanged(async (user) => {
    if (user) {
        currentUser = user;
        try {
            userData = await loadUserData();

            // Check payment status
            const userStatus = (userData.status || userData.statut || '').toString().toLowerCase().trim();
            const validStatuses = ['paid', 'active'];
            if (!validStatuses.includes(userStatus)) {
                showNotification('info','Action requise','Veuillez finaliser votre inscription.');
                setTimeout(() => { window.location.href = 'paiement.html'; }, 2000);
                return;
            }
            
            updateUserInfoUI(user, userData);
            applyTheme();
            initQuiz();
            
            document.body.classList.add('loaded');
            loader.classList.add('hidden');
            
            showNotification('success', 'Bienvenue!', 'Pr√™t pour le Trivia Challenge!');

        } catch (error) {
            console.error("Erreur critique lors de l'initialisation :", error);
            showNotification('error', 'Erreur Critique', "Impossible de charger vos donn√©es.");
            auth.signOut();
            setTimeout(() => { window.location.href = 'login.html'; }, 3000);
        }
    } else {
        window.location.href = 'login.html';
    }
});

/******** Initialisation au chargement de la page ********/
document.addEventListener('DOMContentLoaded', () => {
  // Charger la langue sauvegard√©e ou utiliser le fran√ßais par d√©faut
  const savedLang = localStorage.getItem('preferredLanguage') || 'fr';
  setLanguage(savedLang);
});
